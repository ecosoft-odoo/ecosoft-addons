<odoo>
    <record id="stock_valuation_layer_picking" model="ir.ui.view">
        <field name="name">stock.valuation.layer.picking</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock_account.stock_valuation_layer_picking" />
        <field name="arch" type="xml">
            <xpath
                expr="//button[@name='action_view_stock_valuation_layers']"
                position="attributes"
            >
                <attribute
                    name="groups"
                    eval="[(6,0, [ref('account.group_account_invoice')])]"
                />
            </xpath>
        </field>
    </record>
</odoo>
